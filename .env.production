# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration (Update with your production database)
DATABASE_URL=postgresql://username:password@your-production-host:5432/patent_hash_prod
PGHOST=your-production-host
PGPORT=5432
PGUSER=your-production-username
PGPASSWORD=your-production-password
PGDATABASE=patent_hash_prod

# Session Configuration (Generate a strong secret)
SESSION_SECRET=your-super-secure-production-session-secret-min-32-chars

# Authentication
USE_REPLIT_AUTH=false

# Hedera Blockchain Configuration
HEDERA_ACCOUNT_ID=0.0.your-production-account
HEDERA_PRIVATE_KEY=your-production-private-key
HEDERA_NETWORK=mainnet

# AI Service Configuration
GEMINI_API_KEY=your-production-gemini-api-key

# CORS Configuration (Update with your production frontend URL)
FRONTEND_URL=https://patent-hash-webapp.vercel.app

# SSL/Security Configuration
FORCE_HTTPS=true
SECURE_COOKIES=true
TRUST_PROXY=true
